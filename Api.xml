<!--doAuthenticate-->
<xml>
	<request>
		<type>doAuthenticate</type>
		<content>
			<userid></userid><!--Example : alexandre.ratel-->
			<userpassword></userpassword><!--Example : 12345-->
		</content>
	</request>
</xml>
<xml>
	<reply>
		<type>doAuthenticate</type>
		<content>
			<securitytoken></securitytoken><!--security token to use for the following requests-->
		</content>
	</reply>
</xml>
<xml>
	<reply>
		<type>doAuthenticate</type>
		<content>
			<error>Error description</error>
		</content>
	</reply>
</xml>

<!--search-->
<xml>
	<request>
		<type>search</type>
		<securitytoken></securitytoken><!--Security token of the connected user. Will reply only the visible agents for this user-->
		<content>
			<search></search><!--The search content, could be agent name, a team or a skill. Will return agents list-->
		</content>
	</request>
</xml>
<xml>
	<reply>
		<type>search</type>
		<content>
			<agents>
				<agent><!--One or more-->
					<userid></userid>
					<firstname></firstname>
					<lastname></lastname>
					<number></number>
					<type></type><!--agent,supervisor-->
					<teams>
						<team></team><!--Team name--><!--One or more-->
					</teams>
					<skills>
						<skill><!--One or more skills-->
							<name></name><!--skill name-->
							<level></level><!--skill level-->
						</skill>
					</skills>
					<devices>
						<device><!--One or more-->
							<type></type><!--deskphone,softphone-->
							<name></name><!--softphone name or mac address-->
							<model></model><!--Only relevent for deskphone empty for softphone-->
						</device>
					</devices>
				</agent>
			</agents>
		</content>
	</reply>
</xml>
<xml>
	<reply>
		<type>search</type>
		<content>
			<error>Error description</error>
		</content>
	</reply>
</xml>

